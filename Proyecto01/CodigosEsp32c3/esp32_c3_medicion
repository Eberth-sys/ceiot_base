#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_BMP280.h>
#include <WiFi.h>
#include <HTTPClient.h>

// Configuración de WiFi y otros parámetros
const char* ssid = "1309";
const char* password = "Pegatenoma.";
const char* serverUrl = "http://192.168.255.196:8080/measurement";

// Crear una instancia del sensor BMP280
Adafruit_BMP280 bmp;

void setup() {
    Serial.begin(115200);
    
    // Iniciar conexión WiFi
    WiFi.begin(ssid, password);
    while (WiFi.status() != WL_CONNECTED) {
        delay(1000);
        Serial.print(".");
    }
    Serial.println("Connected to WiFi");

    // Iniciar el sensor BMP280
    if (!bmp.begin(0x76)) {  // La dirección I2C por defecto del BMP280 es 0x76
        Serial.println("Could not find a valid BMP280 sensor, check wiring!");
        while (1);
    }
    
    // Obtener la dirección MAC
    String macAddress = WiFi.macAddress();
    Serial.println("MAC Address: " + macAddress);

    // Leer los valores del sensor BMP280
    float temperature = bmp.readTemperature();
    float pressure = bmp.readPressure() / 100.0F; // Convertir Pa a hPa

    // Definir la humedad, si no tienes un sensor de humedad, puedes dejarla como un valor fijo
    float humidity = 55.0;  // Reemplaza con tu valor real o sensor

    // Construir el payload
    String payload = "id=" + macAddress + "&t=" + String(temperature) + "&h=" + String(humidity) + "&p=" + String(pressure);

    // Enviar la solicitud POST al servidor
    if (WiFi.status() == WL_CONNECTED) {
        HTTPClient http;
        http.begin(serverUrl);
        http.addHeader("Content-Type", "application/x-www-form-urlencoded");

        int httpResponseCode = http.POST(payload);
        
        if (httpResponseCode > 0) {
            String response = http.getString();
            Serial.println("Response: " + response);
        } else {
            Serial.println("Error in HTTP request");
        }

        http.end();
    } else {
        Serial.println("Error in WiFi connection");
    }
}

void loop() {
    // No es necesario hacer nada en el loop para este ejemplo
}
